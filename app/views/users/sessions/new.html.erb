<div class="container">
  <div class="row">
    <div class="col s6 offset-s3 z-depth-1" id="panell">
      <h5 id="title" class="center-align">Login Form</h5>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-field') do |f| %>
        <%= devise_error_messages! %>
        <div class="form-fields">
          <div class="input-field">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="input-field">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="row">
              <div class="col">
                <%= f.label :remember_me %>
              </div>
              <div class="col">
                <div class="switch">
                  <label>
                    Off
                    <input type="checkbox" name="remember_me">
                    <span class="lever"></span>
                    On
                  </label>
                </div>
              </div>
            </div>
          <% end -%>
        </div>
        <div class="actions container center">
          <%= f.submit "Log in", class: 'waves-effect waves-light btn' %>
          <%= render "users/shared/links" %>
        </div>
      <% end %>
      <br/>
    </div>
  </div>
</div>
